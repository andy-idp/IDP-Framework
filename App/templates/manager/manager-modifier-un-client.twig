{% extends "layout-manager.twig" %}

{% block body_content %}
<div id="wrap-container">
    <div id="page-clients">

        <h1>Modifier un client</h1> 

        <div id="barre-outils">
            <div id="barre-outils-form">
                <a href="{{ WEB_URL }}/manager/clients?page={{ page }}&amp;tri={{ tri }}&amp;ordre={{ tri_ordre }}>"><i class="fa fa-fw fa-backward"></i>Retour à la liste des clients</a>
            </div>
        </div>

        <form action="{{ WEB_URL }}/manager/clients/modifier-un-client/{{ client.id }}?page={{ page }}&amp;tri={{ tri }}&amp;ordre={{ tri_ordre }}" method="post" autocomplete="off">
            <section>
                <div class="section-container">
                    <h2>Informations sur le client</h2>

                    <p>
                        <label for="nom">Nom *</label>
                        <span>
                            <input type="text" name="nom" tabindex="1" autocomplete="off" id="nom" value="{{ client.nom }}" />
                        </span>
                    </p>
                    <p>
                        <label for="prenom">Prénom *</label>
                        <span>
                            <input type="text" name="prenom" tabindex="2" autocomplete="off" id="prenom" value="{{ client.prenom }}" />
                        </span>
                    </p>
                    <p>
                        <label for="email">E-mail *</label>
                        <span>
                            <input type="text" name="email" tabindex="3" autocomplete="off" id="email" value="{{ client.email }}" />
                        </span>
                    </p>
                    <p>
                        <label for="pass">Mot de passe (A renseigner uniquement si vous souhaitez le modifier)</label>
                        <span>
                            <input type="password" name="pass" tabindex="4" autocomplete="off" id="pass"/>
                        </span>
                    </p>     
                    <p class="p-checkbox-radio">
                        <input type="checkbox" value="1" tabindex="5" name="actif" id="actif"{% if client.actif == 1 %} checked="checked"{% endif %} /> <label for="actif">Activer le compte</label>
                    </p>
                </div>
            </section>

            <p id="p-chps-obligatoires">
                * Champs obligatoires
            </p>
            
            <p id="p-submit">
                <input type="submit" value="Valider" tabindex="6" />
                <input type="hidden" name="token" value="{{ token }}" />
            </p> 
        </form>

    </div>
</div>
{% endblock %}